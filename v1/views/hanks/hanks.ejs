    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="/"><span class="glyphicon glyphicon-hdd" aria-hidden="true"></span>Datahanks</a>
            </div>

            <div class="collapse navbar-collapse">
                <ul class=" nav navbar-nav navbar-right">
                    <% if(!currentUser){ %>
                        <li><a href="/login">Login</a></li>
                        <li><a href="/register">Signup</a></li>
                        <% } else { %>
                            <li> <a href="#">Currently Logged in as <%=currentUser.username
                                %></a> </li>
                            <li><a href="/logout">Logout</a></li>
                            <% } %>

                </ul>

            </div>
        </div>
    </nav>


    <div class="carousel fade-carousel slide" data-ride="carousel" data-interval="4000" id="bs-carousel">
        <!-- Overlay -->
        <div class="overlay"></div>

        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#bs-carousel" data-slide-to="0" class="active"></li>
            <li data-target="#bs-carousel" data-slide-to="1"></li>
            <li data-target="#bs-carousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            <div class="item slides active">
                <div class="slide-1"></div>
                <div class="hero">
                    <hgroup>
                        <h1>Welcome to our world</h1>
                        <h3></h3>
                    </hgroup>
                    <!-- <button class="btn btn-hero btn-lg" role="button">See all features</button> -->
                </div>
            </div>
            <div class="item slides">
                <div class="slide-2"></div>
                <div class="hero">
                    <hgroup>
                        <h1>This is the DATA HANKS</h1>
                        <h3>The one place to get it all...!!!</h3>
                    </hgroup>
                    <!-- <button class="btn btn-hero btn-lg" role="button">See all features</button> -->
                </div>
            </div>
            <div class="item slides">
                <div class="slide-3"></div>
                <div class="hero">
                    <hgroup>
                        <h1>Be the part of Community</h1>
                        <h3>You can share yours thoughts and many more things...!!!</h3>
                        <!-- <a role="button" class="btn btn-primary btn-large" href="/hanks/new">Add New Hanks</a> -->

                    </hgroup>


                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <% if (currentUser && currentUser.isAdmin) { %>
            <H4 class="lll">You're an admin!!</H4>

            <% } %>
                <header class="jumbotron lll ppp">
                    <div class="container">

                    </div>
                    <h1> <span class="glyphicon glyphicon-hdd" aria-hidden="true"></span>Welcome To The Data Hanks</h1>

                    <p>View our handpicked Study Materials from all over the Work.....!!!</p>
                    <a class="btn btn-primary btn-large" href="/hanks/new">Add New Hanks</a>
                    <p>
                        <form action="/hanks" method="GET" class="form-inline">
                            <div class="form-group">
                                <input type="text" name="search" placeholder="Search here..." class="form-control">
                                <input type="submit" value="search" class="btn btn-xs btn-hero">
                            </div>

                        </form>
                    </p>

                </header>

                <div class="d-flex align-items-stretch">
                    <div class="row text-center " style="display: flex;flex-wrap: wrap; ">
                        <% hanks.forEach(function(hank){ %>
                            <div class="col-md-3 col-sm-6 ">


                                <div class="thumbnail ">
                                    <img src="<%=hank.image %>" alt="">
                                    <div class="caption">
                                        <h4>
                                            <%=hank.name%>
                                        </h4>
                                    </div>
                                    <p>
                                        <a href="/hanks/<%= hank._id%>" class="btn btn-primary ">More Info</a>
                                    </p>
                                </div>

                            </div>
                            <%});%>
                    </div>


                </div>



    </div>
    </div>
