<html>

<head>
    <title>Datahanks</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
</head>
<!-- <style>
    body {
        background-color: "green";
    }
</style> -->
<body style="background-color:rgb(255, 255, 170);">
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="/"><span class="glyphicon glyphicon-hdd" aria-hidden="true"></span>Datahanks</a>
            </div>

            <div class="collapse navbar-collapse">
                <ul class=" nav navbar-nav navbar-right">
                    <% if(!currentUser){ %>
                        <li><a href="/login">Login</a></li>
                        <li><a href="/register">Signup</a></li>
                        <% } else { %>
                            <li> <a href="#">Currently Logged in as <%=currentUser.username
                                %></a> </li>
                            <li><a href="/logout">Logout</a></li>
                            <% } %>

                </ul>

            </div>
        </div>
    </nav>
    <div class="container">
        <h1>User Profile</h1>
        <div class="row">
            <div class="thumbnail">
                <div class="col-md-4">
                    <h1>
                        <%= user.FirstName %>
                    </h1>
                    <img src="<%= user.avatar  %> " alt="">
                    <div class="caption">
                        <a href="<%= user.email %> ">
                            <%= user.email %>
                        </a>
                    </div>
                   <b>VISHWAKARMA INSTITUTE OF TECHNOLOGY, PUNE</b>
                </div>
                <div class="col-md-8">
                    <h3>
                        <%= user.username %>'s hanks:</h3>
                    <ul>
                        <% hanks.forEach(function(err, hank){ %>
                            <li>

                                <a href="/hanks/:<%= hank.id %>">
                                    <%= hank.name  %>
                                </a>
                            </li>
                            <% }  ); %>

                    </ul>


                </div>

            </div>


        </div>

    </div>


</body>

</html>