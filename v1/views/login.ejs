<html>

<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <style>
        body {
            background-image: url(https://www.sagatraining.ca/wp-content/uploads/2018/10/background-images-for-login-form-8.jpg);
            color: aliceblue;
        }
    </style>
</head>

<script>
    function validate()
    {
        var username = document.forms["loginpage"]["username"];
if (username.value.length == 0) {
    //document.getElementById("message").innerHTML = "**Password length must be atleast 8 characters";          
    window.alert("Please provide Username");
            return false;
        }

        var password = document.forms["loginpage"]["password"];
if (password.value.length < 8) {
    //document.getElementById("message").innerHTML = "**Password length must be atleast 8 characters";          
    window.alert("Incorrect Password");
            return false;
        }
        
        return true;
    }
</script>


<body>
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="/"><span class="glyphicon glyphicon-hdd" aria-hidden="true"></span>Datahanks</a>
            </div>
            <div class="collapse navbar-collapse">
                <ul class=" nav navbar-nav navbar-right">
                    <% if(!currentUser){ %>
                        <li class="active"><a href="/login">Login</a></li>
                        <li><a href="/register">Signup</a></li>
                        <% } else { %>
                            <li> <a href="#">Currently Logged in as <%=currentUser.username
                              %> </a> </li>
                            <li><a href="/logout">Logout</a></li>
                            <% } %>
                </ul>
            </div>
        </div>
    </nav>


    <div text-align="center" class="container">

        <div style="width: 30%;margin:25px auto;">

            <form name="loginpage" action="/login" method="POST" onsubmit="return validate()">
                <div class="form-group">
                    <label for="username">Username</label>
                    <input type="text" class="form-control" id="exampleInputEmail1" name="username" aria-describedby="emailHelp" placeholder="Username">
                    <small id="emailHelp" class="form-text text-muted">We won't share your email with anyone else.</small>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Password</label>
                    <input type="password" class="form-control" name="password" id="exampleInputPassword1" placeholder="Password">
                </div>
                <button type="submit" class="btn btn-primary">Login</button>
            </form>
        </div>
    </div>
</body>

</html>